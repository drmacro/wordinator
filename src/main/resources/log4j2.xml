<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <ThresholdFilter level="INFO"/>

 <Appenders>
   <Console name="STDOUT" target="SYSTEM_OUT">
     <PatternLayout pattern="+ %d [%-5p] %m%n"/>
   </Console>
 </Appenders>
 <Loggers>
   <Root level="INFO">
     <AppenderRef ref="STDOUT"/>
   </Root>
 </Loggers>
</Configuration>
